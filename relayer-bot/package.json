  "description": "Cross-chain relayer for CloakSwap RFQ protocol",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p .",
    "dev": "node --no-warnings --loader ts-node/esm src/index.ts",
