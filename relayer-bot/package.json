  "dependencies": {
    "viem": "^2.21.32",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "@types/node": "^24.3.0"
  }
}